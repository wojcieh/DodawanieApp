<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DodawanieApp.MainPage">


    <Grid ColumnDefinitions="100,100,100,100" RowDefinitions="50" ColumnSpacing="20">
        <Entry x:Name="PierwszaLiczba"></Entry>
        <Entry x:Name="DrugaLiczba" Grid.Column="1"></Entry>
        <Button Grid.Column="2" Text="Dodaj" Clicked="Button_Clicked"></Button>
        <Label x:Name="Wynik" Grid.Column="3" Text="Wynik:" VerticalTextAlignment="Center"></Label>
            
    </Grid>
</ContentPage>
